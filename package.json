{
  "name": "Employee-Leave-Management-System",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0",
    "@cap-js/cds-typer": ">=0.1"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-leave-management": "cds watch --open leavemanagement/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-employee-portal": "cds watch --open employeeportal/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/leave-management",
    "app/employee-portal"
  ],
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}
